<Page x:Class="WpfMyShop.pages.SettingPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:WpfMyShop.pages"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="SettingPage">

    <Canvas>
        <TextBlock Text="Items per page: " Canvas.Left="84" Canvas.Top="66" HorizontalAlignment="Left" VerticalAlignment="Top" Height="44" FontSize="25" />
        <TextBox x:Name="TextBoxPaging" Canvas.Left="275" Canvas.Top="66" HorizontalAlignment="Left" Height="44" VerticalAlignment="Center" Width="70" FontSize="25" BorderBrush="Black" BorderThickness="1"/>
        <Button x:Name="changePagingButton" Content="Change" Click="changePagingButton_Click" Canvas.Left="375" Canvas.Top="66" HorizontalAlignment="Left" VerticalAlignment="Top" FontSize="25" Height="44"/>
    </Canvas>
</Page>
